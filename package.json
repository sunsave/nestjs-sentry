{
  "name": "@sunsave/nestjs-sentry",
  "version": "0.0.8",
  "contributors": [
    {
      "name": "Dexter Hardy",
      "email": "dexter.hardy@ntegral.com",
      "url": "http://www.ntegral.com"
    },
    {
      "name": "Danielle Huntrods",
      "email": "danielle@sunsave.energy",
      "url": "https://www.sunsave.energy"
    }
  ],
  "description": "Provides an injectable sentry.io client to provide enterprise logging nestjs modules",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunsave/nestjs-sentry"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "release-it"
  },
  "keywords": [
    "nestjs",
    "sentry.io"
  ],
  "author": "Dexter Hardy",
  "license": "ISC",
  "peerDependencies": {
    "@nestjs/common": ">=10.3.3",
    "@nestjs/core": ">=10.3.3",
    "@sentry/node": ">=8.2.0",
    "@sentry/types": ">=8.2.0",
    "reflect-metadata": ">=0.1.13",
    "rimraf": ">=5.0.1",
    "rxjs": ">=7.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@nestjs/testing": "^10.3.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "codecov": "^3.8.2",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "release-it": "^17.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.10"
  },
  "optionalDependencies": {
    "@nestjs/graphql": ">=12.1.1"
  }
}
