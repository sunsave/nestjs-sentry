{
  "name": "@sunsave/nestjs-sentry",
  "version": "0.0.8",
  "contributors": [
    {
      "name": "Dexter Hardy",
      "email": "dexter.hardy@ntegral.com",
      "url": "http://www.ntegral.com"
    },
    {
      "name": "Danielle Huntrods",
      "email": "danielle@sunsave.energy",
      "url": "https://www.sunsave.energy"
    }
  ],
  "description": "Provides an injectable sentry.io client to provide enterprise logging nestjs modules",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sunsave/nestjs-sentry"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "release": "release-it"
  },
  "keywords": [
    "nestjs",
    "sentry.io"
  ],
  "author": "Dexter Hardy",
  "license": "ISC",
  "peerDependencies": {
    "@nestjs/common": ">=9.4.2",
    "@nestjs/core": ">=9.4.2",
    "@sentry/hub": ">=7.53.0",
    "@sentry/node": ">=7.53.0",
    "reflect-metadata": ">=0.1.13",
    "rimraf": ">=5.0.1",
    "rxjs": ">=7.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "codecov": "^3.8.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "optionalDependencies": {
    "@nestjs/graphql": ">=12.2.0"
  }
}
