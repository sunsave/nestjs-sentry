{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
